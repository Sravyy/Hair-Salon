
@{
  Layout = "_Layout";
}
<body>
  <div class="container-fluid">
    <h1>Edit</h1>
    <hr>
    <h2>Edit Details of @Model.GetName()</h2>
    <form action="/stylists/@Model.GetId()/edit" method="post">
      <label for="stylist-name">Name:</label>
      <input type="text" name="stylist-name" value="@Model.GetName()">
      <button type="submit">Update</button>
    </form>
    <h4><a href="/">Return home</a></h4>
  </div>
</body>

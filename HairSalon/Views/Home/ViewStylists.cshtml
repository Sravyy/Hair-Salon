
@{
  Layout = "_Layout";
}

<body>
  <div class="container-fluid">

    <h2>Stylist List</h2>

    <table>
      <tr>
        <th>No.</th>
        <th>Stylist</th>
      </tr>
        @if (@Model.Count == 0)
        {
          <h3>No stylists have been added yet!</h3>
        }
        @foreach (var stylist in Model)
        {
          <tr>
          <th>@stylist.GetId()</th>
          <th><a href = '/@stylist.GetName()/@stylist.GetId()/clientlist'>@stylist.GetName()</a> | <a href="/stylists/@stylist.GetId()/edit">Edit</a> | <a href="/stylists/@stylist.GetId()/delete">Delete</a>
          </th>
          </tr>
        }
      </table>
      <br>
      <a href="/stylist/add">Add Stylist</a><br>
      <a href="/">Homepage</a>
  </div>
</body>


@{
  Layout = "_Layout";
}
<body>
  <div class="container-fluid">
    <h1>Edit</h1>
    <hr>
    <h2>Edit Details of @Model.GetClientName()</h2>
    <form action="/clients/@Model.GetId()/edit" method="post">
      <label for="new-name">Name:</label>
      <input type="text" name="new-name" value="@Model.GetClientName()">
      <button type="submit">Update</button>
    </form>
    <h4><a href="/">Return home</a></h4>
  </div>
</body>

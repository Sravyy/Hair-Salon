
@{
  Layout = "_Layout";
}

<body>
  <div class="container-fluid">
    <h1> @Model["stylist"].GetName() 's clients</h1>

    @if (@Model["clients"].Count == 0)
    {
      <h3>No clients have been added yet!</h3>
    }
    <table>
      <tr>
        <th>Id</th>
        <th>Client</th>
      </tr>
      @foreach (var client in @Model["clients"])
      {
        <tr>
        <td>@client.GetId()</td>
        <td>@client.GetClientName() | <a href="/clients/@client.GetId()/edit">Edit</a> | <a href="/clients/@client.GetId()/delete">Delete</a>
        </td>
        </tr>
      }
    </table>
    <br>
    <a href="/@Model["stylist"].GetName()/@Model["stylist"].GetId()/client/add">Add a new Client</a><br>
    <a href="/">Homepage</a>
  </div>

</body>
